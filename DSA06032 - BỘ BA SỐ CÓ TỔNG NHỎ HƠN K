#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl ; 

using namespace std ; 

ll n , k ; 
int main () {
	int t ; cin >> t;
	while(t--) {
		cin >> n >> k ; ll a[n]; 
		for(ll i = 0 ; i < n ; i++) cin >> a[i];
		ll cnt = 0 ;
		sort(a,a+n); 
		for(int i = 0 ; i < n - 2 ; i++)
		{
			ll l = i + 1 , r = n - 1;
			while(l < r) { 
				ll sum = a[i] + a[l] + a[r];
				if(sum >= k) 
				{
					--r ; 
				} 
				else {
				 	cnt += r - l ;
					 ++l; 
				 } 
			} 
		}
		cout << cnt << endl; 
	} 
}
