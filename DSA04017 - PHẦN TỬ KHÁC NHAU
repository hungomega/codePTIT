#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl 

using namespace std;

int main ()
{
	int t ; cin >> t ; 
	while(t--) {
		 int n , m; cin >> n ;
		 m = n - 1 ;
		 int a[n] , b[m];
		 for(int i = 0 ; i < n ; i++) {
		 	cin >> a[i];
		 }
		 int index = n  ;
		 for(int i = 0 ; i < m ; i++) {
		 	cin >> b[i];
		 }	
		 for(int i = 0 ; i < n ; i++) {
		 	if(a[i] != b[i]) {
		 		index = i + 1 ; break;
			 }
		 }		 
		 cout << index << endl;	 
	} 
}










