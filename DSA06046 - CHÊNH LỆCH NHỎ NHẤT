#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define e cout << endl

using namespace std;

int main ()
{
	int t ; cin >> t;
	while(t--) {
		int n ; cin >> n ;
		int a[n]; 
		for(int &x : a) cin >> x ;
		sort(a,a+n);
		int d = INT_MAX;
		for(int i = 1 ; i < n ; i++) {
			d = min(d,abs(a[i] - a[i - 1])) ;
		} 
		cout << d << endl ; 
	}
}

	

