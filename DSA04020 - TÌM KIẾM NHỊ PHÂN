#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define e cout << endl
#define pb push_back 

using namespace std;

int main ()
{
	int t ; cin >> t;
	while(t--) {
		int n , k ; cin >> n >> k ;
		int a[n] ;
		for(int &x : a) cin >> x ;
		 int l = 0 , r = n - 1 ;
		 int check = 1 ; 
		 while(l <= r) {
		 	int m = (l + r) / 2 ;
			if(a[m] == k) {
				check = 0; 
				cout << m + 1 << endl ;
				break ; 
			} 
			else if(a[m] < k) {
				l = m + 1; 
			} 
			else {
				r = m - 1 ;  
			} 
		 } 
		 if(check) {
		 	cout << "NO\n"; 
		 } 
	} 
}	

	











