#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl ; 

int n , x[100];
bool check = false  ;

void first() {
	for(int i = 1 ; i <= n ; i++) x[i] = i ; 
} 

void sinh() {
	int i = n - 1 ; 
	while(i >= 1 && x[i] > x[i + 1]) {
		--i ; 
	} 
	if(i == 0) check = true ;
	else {
		int j = n ; 
		while(x[j] < x[i]) {
			--j; 
		}
		swap(x[j],x[i]);
		reverse(x + i + 1 , x + n + 1); 
	} 
} 

int main()
{
    int t ; cin >> t; 
	while(t--) {
		cin >> n ; int a[n + 1]; 
		first(); 
		int cnt = 1 ;// dem cau hinh 
		for(int i = 1 ; i <= n ;i++) {
			cin >> a[i];
		}
		while(!check) {
			int tmp = 1 ; 
			for(int i = 1 ; i <= n ; i++) {
				if(x[i] != a[i]) {
					tmp = 0;  
				}
			} 
			if(tmp) {
				cout << cnt << endl; 
				break ; 
			} 
			sinh();
			++cnt ; 
		} 
		check = false ; 
	} 
}
