#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl ; 

int n , k , x[100];
bool check = false  ;

void first() {
	for(int i = 1 ; i <= k ; i++) x[i] = i ; 
} 

void sinh() {
	int i = k; 
	while(i >= 1 && x[i] == n - k + i) {
		--i ; 
	} 
	if(i == 0) check = true ;
	else {
		++x[i];
		 for(int j = i + 1 ; j <= k ; j++) {
		 	x[j] = x[j - 1] + 1 ; 
		 } 
	} 
	 
} 

int main()
{
    int t ; cin >> t; 
	while(t--) {
		cin >> n >> k ; int a[k + 1]; 
		first(); 
		int cnt = 1 ;// dem cau hinh 
		for(int i = 1 ; i <= k ;i++) {
			cin >> a[i];
		}
		while(!check) {
			int tmp = 1 ; 
			for(int i = 1 ; i <= k ; i++) {
				if(x[i] != a[i]) {
					tmp = 0;  
				}
			} 
			if(tmp) {
				cout << cnt << endl; 
				break ; 
			} 
			sinh();
			++cnt ; 
		} 
		check = false ; 
	} 
}
