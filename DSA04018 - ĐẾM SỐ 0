#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl 

using namespace std;

int main ()
{
	int t ; cin >> t ; 
	while(t--) {
		 int cnt = 0 , n; cin >> n ;
		 int a[n];
		 for(int i = 0 ; i < n ; i++) {
		 	cin >> a[i];
		 	if(a[i]) ++cnt ;
		 }
		 cout << n - cnt << endl;
	} 
}










