#include <bits/stdc++.h> 

#define ll long long

using namespace std;

int main ()
{
	int n; cin >> n ;
	int a[n];
	vector<int> v1 , v2 ;
	for(int i = 0 ; i < n ; i++) {
		cin >> a[i];
		if(i % 2 == 0) {
			v1.push_back(a[i]);
		} else {
			v2.push_back(a[i]); 
		} 
	}
	sort(v1.begin(),v1.end()); // sort các phan tu o tri so chan tang dan  
	sort(v2.begin(),v2.end(), greater<int>()); // sort các phan tu o tri so le giam dan  
	int index1 = 0 , index2 = 0 ;
	 for(int i = 0 ; i < n ; i++) 
	 {
	 	if(i % 2 == 0)
		 {
		 	cout << v1[index1++] << " " ; 
		  } else {
		  	cout << v2[index2++] << " " ;
		  } 
	  } 
}
