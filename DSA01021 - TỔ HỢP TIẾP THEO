#include <iostream>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl ; 

int n , k , a[42];

int sinh() {
	int i = k ;
	while(i >= 1 && a[i] == n - k + i) --i;
	if(i > 0) {
		++a[i] ;
		for(int j = i + 1 ; j <= k ; j++) {
			a[j] = a[j - 1] + 1 ; 
		} 
		return 1 ; 
	} 
	return 0 ; 
} 
int main ()
{
	int t ; cin >> t; 
	while(t--)
	{
		 cin >> n >> k;
		int check[50] = {}; 
		for(int i = 1 ; i <= k ; i++) {
			cin >> a[i] ; 
			check[a[i]] = 1 ; 
		}
		int cnt = 0 ;
		if(sinh())
		{
			for(int i = 1 ; i <= k ;i++) {
				if(check[a[i]] == 0) {
					++cnt ; 
				} 
			} 
			cout << cnt ;
			e; 
		}  
		else cout << k << endl ; 
	} 
} 




















