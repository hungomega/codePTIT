#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define e cout << endl
#define pb push_back 

int main ()
{
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	cout.tie(nullptr);
	int t ; cin >> t; string s ;
	while(t--) 
	{
		cin >> s;
		stack<string> st ;
		for(int i = 0 ; i < s.size() ; i++) 
		{
			if(s[i] >= 'A' && s[i] <= 'Z') {
				st.push(string(1,s[i]));
			}
			else {
				string t1 = st.top(); st.pop();
				string t2 = st.top(); st.pop();
				string k1 = "(" , k2 = ")";
				st.push(k1 + t2 + s[i] + t1 + k2);
			}
		}
		cout << st.top() << endl ;
	}
}













			
    









