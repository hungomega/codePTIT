#include <bits/stdc++.h>

using namespace std;

#define pb push_back 
#define ll long long 
#define vi vector<int>	
#define vc vector<char>	
#define vll vector<long long>
#define vpi vector<pair<int,int>>  
#define FOR(i,a,b) for(int i = a ; i < b ; i++)  
#define e cout << endl ; 

int n , m ; // n là số đỉnh , m là số cạnh

int main()
{
	int t ; cin >> t ;
	while(t--) {
		cin >> n >> m ;	
		vector<int> ke[1005]; 
		// nhập danh sách cạnh
		for(int i = 0 ; i < m ; i++) {
			int x , y ; cin >> x >> y ;
			ke[x].pb(y);
			ke[y].pb(x);
		}
		for(int i = 1 ; i <= n ; i++) {
			// ke[i]
			cout << i << ": ";
			for(auto x : ke[i]) {
				cout << x << " ";
			}
			e; 
		}
 	}	
}
