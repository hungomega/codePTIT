#include <bits/stdc++.h>

#define ll long long 
#define pb push_back

using namespace std ;

int main ()
{
	int t ; cin >> t ; 
	while(t--)
	{
		int n , x ; cin >> n >> x ; 
		int a[n] ; 
		for(int i = 0 ; i < n ; i++) cin >> a[i]; 
	//	int pos = -1 ;
		for(int i = 0 ; i < n ; i++) {
			if(a[i] == x) {
				cout << i + 1 << endl ;
				break; 
			} 
		} 
		
	}
} 

